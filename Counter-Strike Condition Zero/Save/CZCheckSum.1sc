// Clear int after end of string
int offset = FindFirst((byte)0x00, 0, 0, 0, 0, 1, 0x08) + 1;
WriteInt(offset, (int)0x00);

// Update checksum
int addr = FileSize()-4;
int checksum = 0;
int i = 0;
for (i = 0; i < addr; i++)
	checksum += ReadByte(i) * (i+1);
WriteInt(addr, checksum);

// Print checksum
Printf("CheckSum = %i\n", checksum);
